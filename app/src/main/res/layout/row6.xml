<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    android:background="#BCB8B8"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    android:clickable="true"
    android:focusable="true"> <!-- Make CardView clickable -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Card-like Frame for Image -->
        <androidx.cardview.widget.CardView
            android:id="@+id/image_card"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <!-- Image Inside the Card -->
            <ImageView
                android:id="@+id/image_tmb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="Card Image"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>

        <!-- Title of the card -->
        <TextView
            android:id="@+id/b_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="4dp"
            android:layout_toEndOf="@id/image_card"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Card Title"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Description of the Card -->
        <TextView
            android:id="@+id/btn_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/b_title"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="4dp"
            android:layout_toEndOf="@id/image_card"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Description of the Card goes here"
            android:textColor="#666666"
            android:textSize="14sp" />

        <!-- Amount -->
        <TextView
            android:id="@+id/btn_auth"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_desc"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@id/image_card"
            android:text="Amount"
            android:textColor="#888888"
            android:textSize="12sp" />

        <!-- Update and Delete Buttons Aligned Horizontally -->
        <LinearLayout
            android:id="@+id/button_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_auth"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <!-- Update Button -->
            <ImageButton
                android:id="@+id/update_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:background="?attr/selectableItemBackground"
                android:contentDescription="Update Card"
                android:src="@android:drawable/ic_menu_edit"
                android:focusable="false"
                android:clickable="false" />

            <!-- Delete Button -->
            <ImageButton
                android:id="@+id/delete_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackground"
                android:contentDescription="Delete Card"
                android:src="@android:drawable/ic_menu_delete"
                android:focusable="false"
                android:clickable="false" />
        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
